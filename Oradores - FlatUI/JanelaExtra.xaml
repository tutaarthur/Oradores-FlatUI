<Window x:Class="Oradores___FlatUI.JanelaExtra"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oradores___FlatUI"
        mc:Ignorable="d"
        Title="Oradores" Height="500" Width="300" Background="#FF2C3E50" Icon="Icone.ico" Closing="Window_Closing">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Label" Grid.Column="1" Margin="0,10,0,3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
        <ListView x:Name="listView" Grid.Column="1" Margin="0,10,0,10" Grid.Row="1" Background="#FF34495E" Foreground="White" HorizontalContentAlignment="Center" IsHitTestVisible="True"/>
        
    </Grid>
    
</Window>
    
